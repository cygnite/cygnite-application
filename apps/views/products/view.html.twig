{% extends 'layout/main/base.html.twig' %}

{% block title %}
    Cygnite Framework - Simple Crud Operation
{% endblock %}

{% block content %}

    {# dump(productLists) #}

    <div style="float:right;margin-right:47px; margin-bottom: 10px;margin-top: 10px;padding-bottom:30px;">
        {{ addLink('products', 'Back', buttonAttributes.primary) | raw }}
    </div>



    <div class="form" style="">
        <h2>Showing Product #{{ product.id }}</h2>

        <div class="form-group">
            <div class='form-label control-label'>Name</div>
            <div class="col-sm-10">
                <p class="form-control-static"><span>{{ product.product_type }} </span></p>
            </div>
        </div>

        <div class="form-group">
            <div class="form-label control-label">Product Name</div>
            <div class="col-sm-10">
                <p class="form-control-static"><span>{{ product.name }} </span></p>
            </div>
        </div>

        <div class="form-group">
            <div class="form-label control-label">Product Price</div>
            <div class="col-sm-10">
                <p class="form-control-static"><span>{{ product.price }} </span></p>
            </div>
        </div>
    </div>


{% endblock %}

{% block footer %}

{% endblock %}
